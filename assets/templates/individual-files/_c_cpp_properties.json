{
    "configurations": [
        {
            "name": "ESP32-Windows",
            "intelliSenseMode": "clang-x64",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "compilerPath": "\":TOOLCHAIN_PATH:/opt/xtensa-esp32-elf/bin/xtensa-esp32-elf-gcc.exe\" -mlongcalls",
            "includePath": [
                ":TOOLCHAIN_PATH:/opt/xtensa-esp32-elf/**",
                "${workspaceFolder}/components/**",
                "${workspaceFolder}/build/**",
                "${workspaceFolder}/main",
                ":IDF_PATH:/components/**"
            ],
            "browse": {
                "path": [
                    ":TOOLCHAIN_PATH:/opt/xtensa-esp32-elf/**",
                    "${workspaceFolder}/components/**",
                    "${workspaceFolder}/build/**",
                    "${workspaceFolder}/main",
                    ":IDF_PATH:/components/**"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.c_cpp.db"
            }
        }
    ],
    "version": 4
}